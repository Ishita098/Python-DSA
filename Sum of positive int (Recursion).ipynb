   "source": [
    "def sumofdigits(n):\n",
    "    assert n >=0 and int(n)==n ,\"The number must be a positive number\"\n",
    "    if n ==0:\n",
    "        return 0\n",
    "    else:\n",
    "        return int(n%10 )+ sumofdigits(int(n/10))\n",
    "print(sumofdigits(432))"
   ]
