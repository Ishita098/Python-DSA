   "source": [
    "def power (base , exp):\n",
    "    if exp ==0:\n",
    "        return 1\n",
    "    elif exp<0:\n",
    "        return 1/base*power(base,exp+1)\n",
    "    else:\n",
    "        return base*power(base ,exp-1)\n",
    "print(power(3,-4))"
   ]
  }
